#!/usr/bin/env perl

use strict;
use warnings;

use FindBin::libs;

use Trog::Config();
use Getopt::Long qw{GetOptionsFromArray};

my $user;
GetOptionsFromArray(\@ARGV,
    'user' => \$user,
);

my $hostname = $ARGV[0];

my $conf = Trog::Config->get();
print Trog::Config::hostname($conf, $hostname, $user);

