#!/usr/bin/env perl

use strict;
use warnings;

use FindBin::libs;

use Trog::Auth;

my ($user, $pass) = @ARGV;

# TODO better arg handling, etc
die "User must be first arg" unless $user;
die "Password must be second arg" unless $pass;

Trog::Auth::killsession($user);
Trog::Auth::useradd($user, $pass, ['admin']);
